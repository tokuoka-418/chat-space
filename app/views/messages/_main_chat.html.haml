.chat-main
  .chat-main__groups
    .chat-main__groups__box
      .chat-main__groups__box__left
        .chat-main__groups__box__left__groupname
          エンジニア motoki
        .chat-main__groups__box__left__membername
          %p.chat-main__groups__menber-user
            Menber :
          %p.chat-main__groups__menber-name
            kazuhiro 
    .chat-main__groups__box
      .chat-main__groups__box__editbtn
        = link_to '#', class: 'Edit' do
          Edit



  .chat-main__messages-list
    = render @messages

  .chat-main__forms
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'chat-main__forms__message', placeholder: 'type a message'
      .forms__mask
        = f.label :image, class: 'forms__mask__imege' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'forms__submit'